<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="employee_lector_form" model="ir.ui.view">
            <field name="name">hr.employee.hr.machine.form</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
		<xpath expr="//notebook" position="inside">
                    <page string="Zkteko">
                    <group>
                        <field name="turn_day"/>
                        <field name="category"/>
                        <field name="emp_code"/>
                        <field name="emp_rfid"/>
                        <field name="emp_psw"/>
                    </group>
                    </page>
                  </xpath>
            </field>
       </record>
    </data>
</openerp>
